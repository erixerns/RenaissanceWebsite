<html>

<head>
  <title>Edit Internship</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <script src="/lib/jquery.min.js"></script>
  <link rel="stylesheet" href="/css/bootstrap.css">
  <style>
    .table{
      width: 50%;
      margin: 0px auto;
    }
    @media only screen and (max-width: 600px) {
      body,html{
        width: 100vw;
      }
    }
  </style>
</head>


<body>
  <div class="container mt-4">
    <a href="add_internship" target="_blank"> <button class="btn btn-danger mx-auto" id="b11">+ Add Post</button></a>

    <% for(var i=0;i< test.length;i++) { %>
    <form id="post<%= i %>" method="POST" action="/edit/<%= test[i]._id %>" enctype="multipart/form-data">
      <table class="table table-stripped mx-auto table-bordered mt-4">
        <tr>
          <td>
            <h4>Role</h4>
          </td>
          <td><input class="form-control" name="role" type="text" value="<%= test[i].role %>" id="heading"></td>
        </tr>
        <tr>
          <td>
            <h4>Image</h4>
          </td>
          <td><img class="img-thumbnail" src="<%= test[i].imageUrl %>" width="70%" height="50%"> <br><br><input type="file"
              name="myimage"></td>
        </tr>
        <tr>
          <td>
            <h4>Company</h4>
          </td>
          <td><textarea class="form-control" type="text" name="company" value="<%= test[i].company %>"><%= test[i].company %></textarea></td>
        </tr>
        <tr>

          <td>
            <h4>Location</h4>
          </td>
          <td><textarea class="form-control" type="text" name="location" value="<%= test[i].company %>"><%= test[i].location %></textarea></td>
        </tr>
        <tr>

          <td>
            <h4>Cost</h4>
          </td>
          <td><textarea type="text" class="form-control" name="cost" value="<%= test[i].company %>"><%= test[i].cost %></textarea></td>
        </tr>
        <tr>

          <td>
            <h4>Duration</h4>
          </td>
          <td><textarea type="text" class="form-control" name="duration" value="<%= test[i].company %>"><%= test[i].duration %></textarea></td>
        </tr>
        <tr>

          <td>
            <h4>Description</h4>
          </td>
          <td><textarea type="text" class="form-control" name="description" value="<%= test[i].description %>"><%= test[i].description %></textarea></td>
        </tr>
        <tr>
<td >
            <center><a onclick="return confirm_click()" href="/edit/delete/<%= test[i]._id %>">Delete</a></center>
          </td>
          <td >
            <center><button onclick="return confirm_click()" type="submit" class="btn btn-success">Save</button></center>
          </td>
          

        </tr>
      </table>
    </form>
    <% } %>
  </div>
